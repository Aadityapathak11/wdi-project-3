<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<body class="container-fluid">
  <header>
    <% include ../partials/header %>
  </header>

  <main class="page-wrap">

     <h2><%= prompt.promptTheme %>
        <a href="/stories/new/<%= prompt._id %>" class="btn btn-primary pull-right">New Story
        <i class="fa fa-plus-square-o" aria-hidden="true"></i></a>
     </h2>
     <h3 class="promptShowPromptText"><%= prompt.promptText %></h3>

     <h4 class='promptShowStoryHook'>

     <% for(var i=0; i< prompt.stories.length; i++) { %>
        <a href="/stories/<%= prompt.stories[i]._id %>">
        <p><i class="fa fa-book" aria-hidden="true"></i>
        <%= prompt.stories[i].storyHook%></p></a>
     <% } %>
    </h4>
      <br>
        <% if (currentUser) { %>
    <a href="/prompts/edit/<%= prompt._id %>" class="btn btn-danger">Edit Prompt
        <i class="fa fa-cog fa-spin fa-lg fa-fw"></i>
        <span class="sr-only">Loading...</span>
  </a>
          <% } %>

  </main>

  <footer class="site-footer">
    <% include ../partials/footer %>
  </footer>
</body>
</html>
