<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<body class="container-fluid">
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div>
      <h3>Prompts:</h3>
      <% prompts.forEach(function(prompt) { %>
        <h4>
          <form method="POST" action="/prompts/<%= prompt._id %>?_method=DELETE">
            <a href="/prompts/<%= prompt._id %>">
              <%= prompt.promptTheme + ' - ' + prompt.promptText %>
            </a>
            <button type="submit" class="btn btn-xs btn-danger">Delete</button>
          </form>
        </h4>
      <% }) %>
    </div>
    <a href="/prompts/new" class="btn btn-primary">New Prompt</a>

  </main>


  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
